config:
  core.https_address: {{ hostvars[inventory_hostname]['ansible_host'] }}:8443
  core.trust_password: {{ lxd_password }}
networks:
- config:
    bridge.mode: fan
    fan.underlay_subnet: {{ hostvars[inventory_hostname]['lxd_subnet'] }}
  description: ""
  name: lxdfan0
  type: ""
  project: default
storage_pools:
- config:
    size: 50GB
  description: ""
  name: default
  # TODO use btrfs in k8s 1.19.8 https://github.com/kubernetes/kubernetes/issues/94335
  driver: lvm
profiles:
- config: {}
  description: ""
  devices:
    eth0:
      name: eth0
      network: lxdfan0
      type: nic
    root:
      path: /
      pool: default
      type: disk
  name: default
cluster:
  server_name: {{ inventory_hostname }}
  enabled: true
  member_config: []
  cluster_address: ""
  cluster_certificate: ""
  server_address: ""
  cluster_password: ""
